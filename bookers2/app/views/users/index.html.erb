<div>
    <p><%= flash[:notice] %></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>User Info</h2>
            <p>画像</p>
            <table class="table">
                <tr>
                    <th>name</th>
                    <th>鉄之助</th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th>Hello</th>
                </tr>
            </table>
            <div class="row">
                <p>Userページへのボタン</p>
            </div>
            <h2>New Book</h2>
            <%= form_with model:@book do |f|%>
                <div class="form-group">
                    Title</br>
                    <%= f.text_field :title%>
                </div>
                <div class="form-group">
                    Opinion</br>
                    <%= f.text_area :body%>
                </div>
                <%= f.submit"Create book",class:"btn btn-success"%>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <% @users.each do |user|%>
                <tbody>
                    <td>画像</td>
                    <td><%= user.name %></td>
                    <td><%= link_to "show",user_path(user.id) %></td>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>