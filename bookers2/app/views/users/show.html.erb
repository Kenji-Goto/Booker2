<div>
    <p><%= flash[:notice] %></p>
</div>
<div class="container">
    <div class="row mt-3">
        <%= render 'userInfo', user: current_user %>
        <%= render 'books/new', book: @book%>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table">
                <% @books.each do |book| %>
                <tbody>
                    <tr>
                      <td><%= image_tag @user.get_profile_image(100,100) %></td>
                      <td><%= link_to book.title ,book_path(book.id)%></td>
                      <td><%= book.body %></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>