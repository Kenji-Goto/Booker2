<div class="container">
    <div class="row mt-3">
        <div class="col-md-3">
            <h2>User Info</h2>
            <p>画像</p>
            <table class="table">
                <tr>
                    <th>name</th>
                    <th>鉄之助</th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th>Hello</th>
                </tr>
            </table>
            <div class="row">
                <p>Userページへのボタン</p>
            </div>
            <h2>New Book</h2>
            <%= form_with model:@book do |f|%>
                <div class="form-group">
                    Title</br>
                    <%= f.text_field :title%>
                </div>
                <div class="form-group">
                    Opinion</br>
                    <%= f.text_area :body%>
                </div>
                <%= f.submit"Create book",class:"btn btn-success"%>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table">
                <% @books.each do |book| %>
                <tbody>
                    <tr>
                      <td>画像</td>
                      <td><%= link_to book.title ,book_path(book.id)%></td>
                      <td><%= book.body %></td>
                
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>