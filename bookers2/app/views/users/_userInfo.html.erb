 <div class="col-md-3">
            <h2>User Info</h2>
            <p><%= image_tag user.get_profile_image(100,100) %></p>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th><%= user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= user.introduction %></th>
                </tr>
            </table>
            <div class="row">
                <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do%>
                <i class="fa-solid fa-user-gear" style="color: #818892;"></i>
                <% end %>
            </div>
